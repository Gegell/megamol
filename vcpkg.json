{
  "name": "megamol",
  "version-string": "1.3.0-dev",
    "dependencies": [
        "cppzmq",
        "cxxopts",
        "delaunator-cpp",
        "eigen3",
        "expat",
        {
            "name": "imgui",
            "features": [
                "docking-experimental"
            ]
        },
        "imguizmoquat",
        "implot",
        "glfw3",
        "glm",
        "libpng",
        "lua",
        "mmpld-io",
        "nlohmann-json",
        "simultaneous-sort",
        "spdlog",
        {
            "name": "tbb",
            "version>=": "2021.5.0"
        },
        "tinygltf",
        "tinyobjloader",
        "tinyply",
        "vtk-m",
        "zeromq",
        "zlib"
    ],
  "features": {
    "use-cgal": {
      "description": "Use CGAL",
      "dependencies": [
        "cgal"
      ]
    },
    "use-opengl": {
      "description": "Use OpenGL",
      "dependencies": [
        "megamol-shader-factory",
        {
          "name": "imgui",
          "features": [
            "opengl3-binding"
          ]
        }
      ]
    },
    "use-ospray": {
      "description": "Use OSPRay",
      "dependencies": [
        {
          "name": "ospray",
          "version>=": "2.10.0",
          "features": [
            "avx",
            "avx2"
          ]
        }
      ]
    }
  }
}
